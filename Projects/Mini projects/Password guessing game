import random

easy_words   = ["apple", "train", "tiger", "money", "india"]
medium_words = ["python", "bottle", "monkey", "planet", "laptop"]
hard_words   = ["elephant", "diamond", "umbrella", "computer", "mountain"]

def get_hint(secret, num_hints=2):
    positions = random.sample(range(len(secret)), min(num_hints, len(secret)))
    hint = "".join(secret[i] if i in positions else "_" for i in range(len(secret)))
    return hint

def play_game():
    print("\nWelcome to the password-guessing game")
    level = input("Choose difficulty (easy / medium / hard): ").lower()

    if level == "easy":
        secret = random.choice(easy_words)
    elif level == "medium":
        secret = random.choice(medium_words)
    elif level == "hard":
        secret = random.choice(hard_words)
    else:
        print("Invalid choice — defaulting to easy level.")
        secret = random.choice(easy_words)

    hint = get_hint(secret, num_hints= max(1, len(secret)//3))
    print("Hint (some letters revealed):", " ".join(hint))

    guessed_letters = set()
    max_wrong = len(secret) + 2
    wrong = 0

    print("\nI have chosen a secret word. Try to guess it letter by letter.")
    print("You have", max_wrong - wrong, "wrong guesses allowed.")

    while True:
        display = "".join([c if c in guessed_letters else "_" for c in secret])
        print("Word:", " ".join(display))

        if "_" not in display:
            print("Congratulations! You guessed the word:", secret)
            break

        guess = input("Guess a letter: ").lower()
        if len(guess) != 1 or not guess.isalpha():
            print("Please guess a single letter (a–z).")
            continue
        if guess in guessed_letters:
            print("You already guessed that letter — try a different one.")
            continue

        guessed_letters.add(guess)

        if guess in secret:
            print("Good guess!")
        else:
            wrong += 1
            print("Wrong guess! Attempts left:", max_wrong - wrong)

        if wrong >= max_wrong:
            print("Game over — you're out of guesses. The word was:", secret)
            break


if __name__ == "__main__":
    while True:
        play_game()
        again = input("\nDo you want to play again? (y/n): ").lower()
        if again != 'y':
            print("Thanks for playing! ")
            break
