import speech_recognition as sr
import pyttsx3
import webbrowser
import wikipedia
import datetime
import re
import pyjokes

WAKE = "jarvis"

def speak(text):
    print("Assistant:", text)
    engine = pyttsx3.init()
    engine.say(text)
    engine.runAndWait()

def listen():
    r = sr.Recognizer()
    with sr.Microphone() as source:
        print("Listening...")
        r.adjust_for_ambient_noise(source, duration=0.5)
        audio = r.listen(source, phrase_time_limit=5)
    try:
        text = r.recognize_google(audio).lower()
        print("You said:", text)
        return text
    except sr.UnknownValueError:
        return ""
    except sr.RequestError:
        speak("Sorry, I am unable to reach speech service.")
        return ""

def get_time():
    return datetime.datetime.now().strftime("%I:%M %p")

def try_math_compute(text):
    expr = text
    expr = re.sub(r'what is ', '', expr)
    expr = re.sub(r'calculate ', '', expr)
    expr = expr.replace('plus', '+').replace('minus', '-')
    expr = expr.replace('times', '*').replace('multiplied by', '*')
    expr = expr.replace('x', '*')
    expr = expr.replace('divide by', '/').replace('divided by', '/')
    expr = re.sub(r'[^0-9\+\-\*\/\.\(\) ]', '', expr)
    try:
        result = eval(expr)
        return str(result)
    except Exception:
        return None

def respond(query):
    query = query.lower().strip()

    # jokes
    if 'joke' in query:
        joke = pyjokes.get_joke()
        speak(joke)
        return

    result = try_math_compute(query)
    if result is not None:
        speak("The result is " + result)
        return

    if 'time' in query:
        speak("The time is " + get_time())
    elif query.startswith('who is') or query.startswith('what is'):
        speak("Let me check.")
        try:
            info = wikipedia.summary(query, sentences=2)
            speak(info)
        except Exception:
            speak("Sorry, I couldn't find information about that.")
    elif 'open youtube' in query:
        speak("Opening YouTube")
        webbrowser.open("https://www.youtube.com")
    elif 'open google' in query:
        speak("Opening Google")
        webbrowser.open("https://www.google.com")
    else:
        speak("You said: " + query)

if __name__ == "__main__":
    speak("Initializing Jarvis, Say...Jarvis")
    while True:
        text = listen()
        if WAKE in text:
            speak("Yes?")
            command = listen()
            if command:
                respond(command)
        if text and ("exit" in text or "quit" in text):
            speak("Goodbye!")
            break
